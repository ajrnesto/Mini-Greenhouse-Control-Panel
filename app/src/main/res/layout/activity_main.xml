<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimaryVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/worksans_medium"
            android:text="Greenhouse"
            android:textColor="?colorPrimary"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?colorPrimaryVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:tabIconTint="?colorPrimary"
        app:tabIndicatorColor="?colorPrimary"
        app:tabTextAppearance="@style/Greenhouse.TabTextAppearance"
        app:tabTextColor="?colorPrimary">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/hydration_alt_24"
            android:text="Hydration" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/climate_24"
            android:text="Climate" />

    </com.google.android.material.tabs.TabLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clHydration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                app:layout_constraintBaseline_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnToggleHydrationSensors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?colorOnPrimary"
                    android:fontFamily="@font/worksans_medium"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingVertical="16dp"
                    android:text="Sensor Readings"
                    android:textAlignment="textStart"
                    android:textColor="?colorPrimary"
                    android:textSize="22sp"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/arrow_up_24"
                    app:iconGravity="end"
                    app:iconTint="?colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnToggleHydrationControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?colorOnPrimary"
                    android:fontFamily="@font/worksans_medium"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingVertical="16dp"
                    android:text="Control Panel"
                    android:textAlignment="textStart"
                    android:textColor="?colorPrimary"
                    android:textSize="22sp"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/arrow_up_24"
                    app:iconGravity="end"
                    app:iconTint="?colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divHydrationSensors" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clHydrationSensors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnToggleHydrationSensors"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/tvSoilMoisture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/worksans_medium"
                        android:text="Soil Moisture"
                        android:textColor="@color/dark"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.ekn.gruzer.gaugelibrary.ArcGauge
                        android:id="@+id/gaugeSoilMoisture"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvSoilMoisture" />

                    <TextView
                        android:id="@+id/tvTheSoilIs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/worksans_medium"
                        android:text="The soil is "
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="@+id/gaugeSoilMoisture"
                        app:layout_constraintEnd_toStartOf="@+id/tvMoisture"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/gaugeSoilMoisture" />

                    <TextView
                        android:id="@+id/tvMoisture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/worksans_medium"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="@+id/gaugeSoilMoisture"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/tvTheSoilIs"
                        app:layout_constraintTop_toBottomOf="@+id/gaugeSoilMoisture"
                        tools:text="WET" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divHydrationSensors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:dividerColor="?colorPrimaryVariant"
                    app:layout_constraintTop_toBottomOf="@+id/clHydrationSensors" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clHydrationControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnToggleHydrationControls">

                    <TextView
                        android:id="@+id/tvWaterPumpControlMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_medium"
                        android:text="Select Control Mode"
                        android:textColor="@color/dark"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/cgHydrationControlMode"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginTop="16dp"
                        app:checkedChip="@id/chipWaterPumpManual"
                        app:chipSpacingHorizontal="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvWaterPumpControlMode"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipWaterPumpManual"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:checkable="true"
                            android:text="Manual"
                            android:textAppearance="@style/Greenhouse.ChipTextAppearance"
                            android:textColor="@drawable/fg_chip_state"
                            app:chipBackgroundColor="@drawable/bg_chip_state"
                            app:chipEndPadding="8dp"
                            app:chipIcon="@drawable/manual_24"
                            app:chipIconSize="19dp"
                            app:chipIconTint="@drawable/fg_chip_state"
                            app:iconStartPadding="8dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipWaterPumpAutomatic"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginStart="16dp"
                            android:checkable="true"
                            android:text="Automatic"
                            android:textAppearance="@style/Greenhouse.ChipTextAppearance"
                            android:textColor="@drawable/fg_chip_state"
                            app:chipBackgroundColor="@drawable/bg_chip_state"
                            app:chipEndPadding="8dp"
                            app:chipIcon="@drawable/automatic_24"
                            app:chipIconSize="19dp"
                            app:chipIconTint="@drawable/fg_chip_state"
                            app:iconStartPadding="8dp" />
                    </com.google.android.material.chip.ChipGroup>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clHydrationControlsManual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toStartOf="@+id/clHydrationControlsAutomatic"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cgHydrationControlMode"
                        tools:visibility="gone">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPumpWater"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/worksans_medium"
                            android:paddingVertical="16dp"
                            android:text="Pump Water"
                            android:textColor="?colorOnPrimary"
                            android:textSize="18sp"
                            app:cornerRadius="12dp"
                            app:iconGravity="textEnd"
                            app:iconTint="?colorOnPrimary"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clHydrationControlsAutomatic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/clHydrationControlsManual"
                        app:layout_constraintTop_toBottomOf="@+id/cgHydrationControlMode"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/worksans_regular"
                            android:text="The plant will be automatically watered when the soil is dry."
                            android:textAlignment="center"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/worksans_regular"
                            android:text="WET: "
                            android:textAlignment="center"
                            android:textColor="@color/wet"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toStartOf="@+id/textView3"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/worksans_regular"
                            android:text="370 and below"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/textView2"
                            app:layout_constraintTop_toTopOf="@+id/textView2" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/worksans_regular"
                            android:text="MOIST: "
                            android:textAlignment="center"
                            android:textColor="@color/moist"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toStartOf="@+id/textView5"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView3" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/worksans_regular"
                            android:text="371 - 600"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/textView4"
                            app:layout_constraintTop_toTopOf="@+id/textView4" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/worksans_regular"
                            android:text="DRY: "
                            android:textAlignment="center"
                            android:textColor="@color/dry"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toStartOf="@+id/textView7"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView5" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/worksans_regular"
                            android:text="600 - 800"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/textView6"
                            app:layout_constraintTop_toTopOf="@+id/textView6" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/worksans_regular"
                            android:text="VERY DRY: "
                            android:textAlignment="center"
                            android:textColor="@color/veryDry"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toStartOf="@+id/textView9"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView7" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/worksans_regular"
                            android:text="801 and above"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/textView8"
                            app:layout_constraintTop_toTopOf="@+id/textView8" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divHydrationControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:dividerColor="?colorPrimaryVariant"
                    app:layout_constraintTop_toBottomOf="@id/clHydrationControls" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clClimate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnToggleClimateSensors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?colorOnPrimary"
                    android:fontFamily="@font/worksans_medium"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingVertical="16dp"
                    android:text="Sensor Readings"
                    android:textAlignment="textStart"
                    android:textColor="?colorPrimary"
                    android:textSize="22sp"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/arrow_up_24"
                    app:iconGravity="end"
                    app:iconTint="?colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clClimateSensors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnToggleClimateSensors"
                    tools:maxHeight="100dp"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/tvTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_medium"
                        android:text="Temperature"
                        android:textColor="@color/dark"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartTemperature"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTemperature" />

                    <TextView
                        android:id="@+id/tvHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/worksans_medium"
                        android:text="Humidity"
                        android:textColor="@color/dark"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/chartTemperature" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartHumidity"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvHumidity" />

                    <TextView
                        android:id="@+id/tvHeatIndex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/worksans_medium"
                        android:text="Heat Index"
                        android:textColor="@color/dark"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/chartHumidity" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartHeatIndex"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvHeatIndex" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnToggleClimateControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?colorOnPrimary"
                    android:fontFamily="@font/worksans_medium"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingVertical="16dp"
                    android:text="Control Panel"
                    android:textAlignment="textStart"
                    android:textColor="?colorPrimary"
                    android:textSize="22sp"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/arrow_up_24"
                    app:iconGravity="end"
                    app:iconTint="?colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clClimateSensors" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clClimateControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnToggleClimateControls">

                    <TextView
                        android:id="@+id/tvWindowControlMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:fontFamily="@font/worksans_medium"
                        android:text="Select Control Mode"
                        android:textColor="@color/dark"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvWindowStatus" />

                    <TextView
                        android:id="@+id/tvTheWindowIsCurrently"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_regular"
                        android:text="The window is currently "
                        android:textColor="@color/dark"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toStartOf="@+id/tvWindowStatus"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvWindowStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_regular"
                        android:text="CLOSED"
                        android:textColor="@color/dark"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/tvTheWindowIsCurrently"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/cgClimateControlMode"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginTop="16dp"
                        app:checkedChip="@id/chipServoManual"
                        app:chipSpacingHorizontal="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvWindowControlMode"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipServoManual"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:checkable="true"
                            android:text="Manual"
                            android:textAppearance="@style/Greenhouse.ChipTextAppearance"
                            android:textColor="@drawable/fg_chip_state"
                            app:chipBackgroundColor="@drawable/bg_chip_state"
                            app:chipEndPadding="8dp"
                            app:chipIcon="@drawable/manual_24"
                            app:chipIconSize="19dp"
                            app:chipIconTint="@drawable/fg_chip_state"
                            app:iconStartPadding="8dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipServoAutomatic"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginStart="16dp"
                            android:checkable="true"
                            android:text="Automatic"
                            android:textAppearance="@style/Greenhouse.ChipTextAppearance"
                            android:textColor="@drawable/fg_chip_state"
                            app:chipBackgroundColor="@drawable/bg_chip_state"
                            app:chipEndPadding="8dp"
                            app:chipIcon="@drawable/automatic_24"
                            app:chipIconSize="19dp"
                            app:chipIconTint="@drawable/fg_chip_state"
                            app:iconStartPadding="8dp" />
                    </com.google.android.material.chip.ChipGroup>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clClimateControlsManual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toStartOf="@+id/clClimateControlsAutomatic"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cgClimateControlMode"
                        tools:visibility="gone">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnToggleWindow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/worksans_medium"
                            android:paddingVertical="16dp"
                            android:text="Open Window"
                            android:textColor="?colorOnPrimary"
                            android:textSize="18sp"
                            app:cornerRadius="12dp"
                            app:elevation="8dp"
                            app:iconGravity="textEnd"
                            app:iconTint="?colorOnPrimary"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clClimateControlsAutomatic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/clClimateControlsManual"
                        app:layout_constraintTop_toBottomOf="@+id/cgClimateControlMode"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/tvHeatIndexMinMax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/worksans_medium"
                            android:text="Set Heat Index Limits"
                            android:textColor="@color/dark"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilMinHeatIndex"
                            style="@style/Widget.Material3.TextInputLayout.FilledBox"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:hint="Min Heat Index"
                            app:boxBackgroundColor="?colorPrimaryVariant"
                            app:helperText="The window will close when reaching this value to raise the temperature and humidity inside"
                            app:layout_constraintEnd_toStartOf="@+id/tilMaxHeatIndex"
                            app:layout_constraintHorizontal_bias="0.5"
                            android:enabled="false"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvHeatIndexMinMax"
                            app:suffixText="\u2103">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etMinHeatIndex"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilMaxHeatIndex"
                            style="@style/Widget.Material3.TextInputLayout.FilledBox"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:hint="Max Heat Index"
                            app:boxBackgroundColor="?colorPrimaryVariant"
                            app:helperText="The window will open when reaching this value to lower the temperature and humidity inside"
                            app:layout_constraintBottom_toBottomOf="@+id/tilMinHeatIndex"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            android:enabled="false"
                            app:layout_constraintStart_toEndOf="@+id/tilMinHeatIndex"
                            app:layout_constraintTop_toTopOf="@+id/tilMinHeatIndex"
                            app:suffixText="\u2103">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etMaxHeatIndex"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="numberDecimal" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClimateSaveChanges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save Changes"
                            android:enabled="false"
                            android:layout_marginTop="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tilMaxHeatIndex" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divClimateControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:dividerColor="?colorPrimaryVariant"
                    app:layout_constraintTop_toBottomOf="@+id/clClimateControls" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divClimateSensors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:dividerColor="?colorPrimaryVariant"
                    app:layout_constraintTop_toBottomOf="@+id/clClimateSensors" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>